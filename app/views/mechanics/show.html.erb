<h2>Mechanic: <%= @mechanic.name %></h2>
<h3>Years of Experience: <%= @mechanic.years_experience %></h3>
<h3>Rides they're working on: </h3>
<% @mechanic.rides.open_rides.order_by_thrill.each do |ride| %>
  <p><%= ride.name %></p>
<% end %>

<h3>Add a ride to workload</h3>
<%= form_with url: "/mechanics/#{@mechanic.id}", method: :post, local: true do |form| %>
  <%= form.label :ride_id, "Ride Id: " %>
  <%= form.text_field :ride_id %>
  <%= form.submit 'Submit' %>
<% end %>
